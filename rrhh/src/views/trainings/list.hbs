<div class="container p-4">
	<div class="row" style="margin-bottom: 15px; background-color: white; border-radius: 10px;">
		<div class="col-md-6">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb" style="margin-top: 3.1%; background-color: white;">
					<li class="breadcrumb-item"><a href="/profile">INICIO</a></li>
					<li class="breadcrumb-item active" aria-current="page">CAPACITACIONES</li>
				</ol>
			</nav>
		</div>
		<div class="col-md-6">
			<form class="form-inline" action="/trainings/search" method="POST" style="margin-top: 4.2%;">
		    	<input class="form-control mr-sm-2" type="text" name="search" placeholder="Search" aria-label="Search">
		    	<select class="browser-default custom-select" name="area" style="width: 20%; margin-right: 1%;">
					<option selected value="">Area</option>
					{{#each areas}}
						<option value="{{nombre}}">{{nombre}}</option>
					{{/each}}
				</select>
		    	<button class="btn btn-primary" type="submit" style="margin-right: 1%;">Search</button>
		    	<a href="/trainings/add" class="btn btn-secondary">Agregar</a>
		    </form>
		</div>
	</div>
	<div class="row">
		{{#each capacitaciones}}
			<div class="col-md-12">
				<div class="card" style="margin-bottom: 2%;">
					<div class="card-header">
						<div class="row text-left">
							<div class="col-md-9">
								<b><a href="/trainings/view/{{id}}">{{nombre}}</a></b>
							</div>
							<div class="col-md-3 text-right">
								{{fecha}}
							</div>
						</div>
					</div>
					<div class="card-body">
						<div class="row">
							<div class="col-md-10">
								{{descripcion}}
							</div>
							<div class="col-md-2">
								<div style="padding-left: 60%">
									<h6>Area:</h6>
								</div>
								<div class="text-right">
									<a href="/workers/search/none.{{area}}" class="btn btn-secondary">{{area}}</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		{{else}}
			<div class="col-md-4 mx-auto">
				<div class="card card-body text-center">
					<p>No hay capacitaciones registradas</p>
					<a href="/trainings/add">Crea una</a>
				</div>
			</div>
		{{/each}}
	</div>	
</div>