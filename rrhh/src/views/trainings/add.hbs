<div class="container p-4">
	<div class="row" style="margin-bottom: 15px; background-color: white; border-radius: 10px;">
		<div class="col-md-6">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb" style="margin-top: 3.1%; background-color: white;">
					<li class="breadcrumb-item"><a href="/profile">INICIO</a></li>
					<li class="breadcrumb-item"><a href="/trainings">CAPACITACIONES</a></li>
					<li class="breadcrumb-item active" aria-current="page">AGREGAR CAPACITACION</li>
				</ol>
			</nav>
		</div>
	</div>
		<div class="card">
			<div class="card-header">
				<div class="row">
					<div class="col-md-9">
						<h4 class="text-uppercase m-2">
							AGREGAR CAPACITACION
						</h4>
					</div>
				</div>		
			</div>
			<div class="card-body" style="background-color: #DAD9D4;">
				<form action="/trainings/add/{{id}}" method="POST">
					<div class="row" style="padding-bottom: 1%">
						<div class="col-md-1">
						</div>
						<div class="col-md-10">
							<h6>
								<div class="row" style="background-color: white; padding-top: 1%;">	
									<div class="col-md-6">
									Nombre:
									</div>
									<div class="col-md-6" style="color:gray;">
										<input type="text" class="form-control" name="nombre" placeholder="Nombre">
									</div>
								</div>
								<div class="row" style="background-color: white; padding-top: 1%;">	
									<div class="col-md-6">
									Fecha:
									</div>
									<div class="col-md-6" style="color:gray;">
										<input type="date" class="form-control" name="fecha">
									</div>
								</div>
								<div class="row" style="background-color: white; padding-top: 1%;">	
									<div class="col-md-6">
									Descripci√≥n:
									</div>
									<div class="col-md-6" style="color:gray;">
										<textarea name="descripcion" rows="5" class="form-control" placeholder="Descripcion" style="max-width: 70%"></textarea>
									</div>
								</div>
								<div class="row" style="background-color: white; padding-top: 1%; padding-bottom: 1%">	
									<div class="col-md-6">
									Area:
									</div>
									<div class="col-md-6" style="color:gray;">
										<select class="browser-default custom-select" name="area" style="width: 30%; margin-right: 1%;">
											{{#each areas}}
												<option value="{{nombre}}">{{nombre}}</option>
											{{/each}}
										</select>
									</div>
								</div>
							</h6>
						</div>
						<div class="col-md-1">
						</div>
					</div>
					<div class="row">
						<div class="col-md-4 text-center">
						</div>
						<div class="col-md-4 text-center">
							<center>
							<div class="form-group">
								<button class="btn btn-success btn-block" style="width: 40%">
									Guardar
								</button>
							</div>
							</center>
						</div>
						<div class="col-md-4 text-center">
						</div>
					</div>
				</form>
			</div>
		</div>
</div>