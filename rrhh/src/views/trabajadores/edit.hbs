<div class="container p-4">
	<div class="row">
		<div class="col-md-6 mx-auto">
			<div class="card">
				<div class="card-header">
					<h4>Editar Trabajador</h4>
				</div>
				<div class="card-body">
					<form action="/trabajadores/edit/{{trabajador.id}}" method="POST">
						<div class="form-group">
							<input type="text" value="{{trabajador.nombre}}" class="form-control" name="nombre" placeholder="Nombre" autofocus>
						</div>
						<div class="form-group">
							<input type="text" value="{{trabajador.apellido}}" class="form-control" name="apellido" placeholder="Apellido">
						</div>
						<div class="form-group">
							<input type="text" value="{{trabajador.rut}}" class="form-control" name="rut" placeholder="Rut">
						</div>
						<div class="form-group">
							<input type="text" value="{{trabajador.fecha_nacimiento}}" class="form-control" name="fecha_nacimiento" placeholder="Fecha de nacimiento">
						</div>
						<div class="form-group">
							<input type="text" value="{{trabajador.area}}" class="form-control" name="area" placeholder="Area">
						</div>
						<div class="form-group">
							<input type="text" value="{{trabajador.nivel_estudios}}" class="form-control" name="nivel_estudios" placeholder="Nivel de estudios">
						</div>
						<div class="form-group">
							<input type="text" value="{{trabajador.nivel_capacitacion}}" class="form-control" name="nivel_capacitacion" placeholder="Nivel de capacitacion">
						</div>
						<div class="form-group">
							<input type="text" value="{{trabajador.num_capacitacion}}" class="form-control" name="num_capacitacion" placeholder="Numero de capacitaciones">
						</div>
						<div class="form-group">
							<button class="btn btn-success btn-block">
								Guardar
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>