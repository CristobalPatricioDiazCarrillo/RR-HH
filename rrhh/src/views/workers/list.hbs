<div class="container p-4">
	<div class="row" style="margin-bottom: 15px; background-color: white; border-radius: 10px;">
		<div class="col-md-6">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb" style="margin-top: 3.1%; background-color: white;">
					<li class="breadcrumb-item"><a href="/profile">INICIO</a></li>
					<li class="breadcrumb-item active" aria-current="page">TRABAJADORES</li>
				</ol>
			</nav>
		</div>
		<div class="col-md-6">
			<form class="form-inline" action="/workers/search" method="POST" style="margin-top: 4.2%;">
		    	<input class="form-control mr-sm-2" type="text" name="search" placeholder="Search" aria-label="Search">
		    	<select class="browser-default custom-select" name="area" style="width: 20%; margin-right: 1%;">
					<option selected value="">Area</option>
					{{#each areas}}
						<option value="{{nombre}}">{{nombre}}</option>
					{{/each}}
				</select>
		    	<button class="btn btn-primary" type="submit" style="margin-right: 1%;">Search</button>
		    	<a href="/workers/add" class="btn btn-secondary">Agregar</a>
		    </form>
		</div>
	</div>
	<div class="row">
		{{#each trabajadores}}
			<div class="col-md-3">
				<div class="card text-center" style="margin-bottom: 10%;">
					<div class="card-body">
						<a href="/workers/view/{{id}}">
							<h4 class="card-title text-uppercase" title="{{nombre}} {{apellido}}" style="white-space: nowrap; text-overflow: ellipsis; overflow: hidden;">
								{{nombre}} {{apellido}}
							</h4>
						</a>
						<img src="/{{image}}.jpg" alt="" class="card-img-top mx-auto m-2 rounded-circle" style="height: 25vh; width: 25vh;">
						<p class="m-2">Rut: {{rut}}</p>
						<p class="m-2">Area: {{area}}</p>
						<a href="/workers/delete/{{id}}" class="btn btn-danger">Eliminar</a>
						<a href="/workers/edit/{{id}}" class="btn btn-secondary">Actualizar</a>
					</div>
				</div>
			</div>
		{{else}}
			<div class="col-md-4 mx-auto">
				<div class="card card-body text-center">
					<p>No hay trabajadores registrados</p>
					<a href="/workers/add">Crea uno</a>
				</div>
			</div>
		{{/each}}
	</div>	
</div>